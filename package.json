{
  "name": "@kronos-integration/test-step",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "main": "src/ava-step.js",
  "module": "src/ava-step.js",
  "description": "kronos-step testing support with ava",
  "contributors": [
    {
      "name": "Torsten Link",
      "email": "torstenlink@gmx.de"
    },
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/ava-step.js --section=API",
    "lint": "documentation lint src/ava-step.js",
    "posttest": "npm run prepare && markdown-doctest",
    "test": "ava",
    "prepare": "rollup -c"
  },
  "dependencies": {
    "ava": "^2.1.0",
    "kronos-service": "^4.17.2"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.0.0",
    "ava": "^2.4.0",
    "builtin-modules": "^3.1.0",
    "c8": "^7.0.1",
    "documentation": "^12.1.4",
    "esm": "^3.2.25",
    "kronos-step": "^5.6.6",
    "markdown-doctest": "^1.0.0",
    "rollup": "^1.29.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-executable": "^1.5.2",
    "semantic-release": "^16.0.1"
  },
  "engines": {
    "node": ">=12.14.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kronos-Integration/test-step.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/test-step/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/test-step#readme",
  "ava": {
    "files": [
      "tests/*-test.js",
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "js",
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  }
}
